@page "/maintenance-turbines"
@inject IToastService toastService
<h3>Maintenance Turbine</h3>

@foreach (var id in Ids)
{
<div class="row g-3">
    <div class="col-auto">
        <SelectComponent Id=@id Values="Turbines" Text="(Choose Turbine)" ValueChanged="@ChangeInfoTurbine" Warning="Turbine is required" />
    </div>
    <div class="col-auto">
        <InputDateComponent DateType="datetime-local" Id=@id ValueChanged="@ChangeInfoPeriod"></InputDateComponent>
    </div>
    <div class="col-auto">
        <InputDateComponent DateType="datetime-local" Id=@id ValueChanged="@ChangeInfoPeriodFinish"></InputDateComponent>
    </div>
    <div class="col-auto">
        <InputCheckBoxComponent Id=@id ValueChanged="@ChangeIsNormalMaintenance"></InputCheckBoxComponent>
    </div> 
</div>
}

<div class="col-auto">
    <ButtonComponent OnClick="AddRow" Text="Add Row"></ButtonComponent>
    <ButtonComponent OnClick="SaveMaintenanceDate" Text="Save Maintenance Date"></ButtonComponent>
    <ButtonComponent OnClick="LoadFromCsv" Text="Save Maintenance Date From Csv"></ButtonComponent>
</div>